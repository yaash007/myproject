<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(function(elem){ %>
        <div class=" card  w-52 text-center">
            <div class=" w-full h-40 bg-sky-400 rounded-lg overflow-hidden">
            <img class="w-full h-full" src="/images/uploads/<%=elem.image %>">
            </div>  
            <h5 class="mt-2 text-ms"><%= elem.title %></h5>
            <h5 class="mt-2 text-ms"><%= elem.user.username %></h5>
            </div>
    <% }) %>
        
        
    </div>
</div>
