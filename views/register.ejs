<% include ./partials/header.ejs %>
<div class="w-full bg-center bg-cover h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw]  bg-white px-20 py-10 rounded-[30px]">
    <h1 class="text-2xl text center text-zinc-700 font-semibold tracking-tighter capitalize leading-none mb-10">Create new account.</h1>
    <form action="/register" method="post">
     username<input class=" rounded-md border-2 block mt-2 w-full  px-3 py2 "type="text" name="username" placeholder="Username">
     fullname<input class=" rounded-md border-2 block mt-2 w-full  px-3 py2 "type="text" name="fullname" placeholder="Fullname">
      Email<input class=" rounded-md border-2 block mt-2 w-full  px-3 py2 " type="email" name="email" placeholder="Email">
      Contact<input class=" rounded-md border-2 block mt-2 w-full  px-3 py2 " type="number" name="contact" placeholder="contact">
      password<input class="rounded-md border-2 block mt-2 w-full  px-3 py2 " type="password" name="password" placeholder="Password">
      <input class=" border-2 block mt-2 w-full  px-3 py2 bg-red-500 text-white rounded-[50px]" type="submit" value="login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-centre">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy;
      </p>
    </form>
    <a class="inline-block mt-7 font-semibold text-zinx-700 text-center w-full" href="/login">Login existing account?</a>
    </div>
  </div>
